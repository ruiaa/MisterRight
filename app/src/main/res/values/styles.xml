<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/text_grey_5</item>
<!--        <item name="android:colorBackground">#f5f5f5</item>-->
    </style>

    <style name="AppTheme" parent="BaseAppTheme"/>

    <style name="ActivityRegister" parent="AppTheme">
        <item name="android:windowBackground">@mipmap/login_bg</item>
    </style>





    <!--倒计时-->
    <style name="timer_number_style" >
        <item name="android:layout_width">@dimen/timer_num_width</item>
        <item name="android:layout_height">@dimen/timer_height</item>
        <item name="android:layout_marginRight">@dimen/dp_2</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_3</item>
        <item name="android:textColor">@color/text_blue</item>
        <item name="android:background">@drawable/border_rect</item>
    </style>
    <style name="timer_colon_style">
        <item name="android:layout_width">@dimen/timer_colon_width</item>
        <item name="android:layout_height">@dimen/timer_height</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_3</item>
        <item name="android:textColor">@color/text_blue</item>
    </style>

    <!--    标题字体    -->
    <style name="toolbar_title" parent="text_1_white"/>

    <!--    标签字体    -->
    <style name="text_label_title" parent="text_2_blue"/>
    <style name="text_hobby_label" parent="text_5_grey_5"/>
    <style name="text_hobby_label_blue" parent="text_6_blue"/>


    <!--    注册字体    -->
    <style name="register_input_text_hint" parent="text_3_grey_5">
